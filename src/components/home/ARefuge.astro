<style>
  section {
    padding-top: 100px;
    padding-bottom: 100px;
    background-color: var(--mesquite-leaf);
    color: var(--limestone-dust);
  }
  p {
    margin-top: 21px;
  }
  ul {
    list-style-type: none;
    padding-left: 0;
  }
  .row {
    display: flex;
    gap: 1rem;
    margin-top: 21px;
  }
  .row__item {
    flex: 1;
    color: var(--charcoal-shade);
    background-color: var(--limestone-dust);
  }
</style>
