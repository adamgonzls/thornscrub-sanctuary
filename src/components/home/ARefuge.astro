---
import { aRefuge } from "@data/vars"
---

<section>
  <div class="container container--text-center">
    <h2>Our Vision: A Refuge for the Overlooked Wilds of Texas</h2>
    <p>
      A land sanctuary in the South Texas thornscrub â€” raw, quiet, and full of
      life. A long-haul project of restoration, respect, and native plant
      reverence.
    </p>
    <div class="row">
      {
        aRefuge.map((paragraph) => (
          <div class="row__item">
            <h3>{paragraph.header}</h3>
            <ul>
              {paragraph.bulletPoints.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  section {
    padding-top: 100px;
    padding-bottom: 100px;
    background-color: var(--mesquite-leaf);
    color: var(--limestone-dust);
  }
  h2 {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  h3 {
    max-width: 326px;
    font-weight: bold;
    margin-left: auto;
    margin-right: auto;
  }
  p {
    margin-top: 21px;
    font-size: 24px;
  }
  ul {
    margin-top: 10px;
    margin-bottom: 0;
    list-style-type: none;
    padding-left: 0;
  }
  .row {
    display: flex;
    gap: 1rem;
    margin-top: 31px;
    flex-direction: column;
  }
  @media screen and (min-width: 600px) {
    .row {
      flex-direction: row;
    }
  }
  .row__item {
    flex: 1;
    border-radius: 28px;
    padding: 20px;
    color: var(--charcoal-shade);
    background-color: var(--limestone-dust);
  }
</style>
